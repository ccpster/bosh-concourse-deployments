---
# concourse config
upgrader_vm_password: <Hashed password generated by `mkpasswd -m sha-512`>
basic_auth_username:  <Admin user for Concourse>
basic_auth_password:  <Admin password for Concourse>
external_url:         <URL for Concourse installation>
tls_cert: |
  -----BEGIN EXAMPLE CERTIFICATE-----
  <SSL Cert valid for `external_url`>
  -----END EXAMPLE CERTIFICATE-----
tls_key: |
  -----BEGIN EXAMPLE RSA PRIVATE KEY-----
  <SSL Key valid for `external_url`>
  -----END EXAMPLE RSA PRIVATE KEY-----
postgres_password:    <Admin password for Concourse Postgres database>
mbus_bootstrap_password: <BOSH agent password used for creating VM>

# Network config
vcenter_cidr:    <Network CIDR for vSphere network>
director_ip:     <Static IP for BOSH director VM>
vcenter_gateway: <IP for network gateway>
vcenter_dns:     <IP address of DNS server>
vcenter_network: <vSphere network name>

# vCenter creds
vcenter_address:    <Hostname or IP of vSphere management API>
vcenter_user:       <vSphere username>
vcenter_password:   <vSphere password>
vcenter_datacenter: <Name of vSphere datacenter>
vcenter_datastore_pattern: <Regex matching target vSphere datastore>
vcenter_cluster:    <Name of vSphere cluster>
