#!/bin/bash

set -eu

# env
: ${GOOGLE_CREDENTIALS:?}
: ${ENVIRONMENT_NAME:?}
: ${WORKER_SECRETS:?}
: ${RUBY_VERSION:?}
: ${JUMPBOX_SSH_USER:?}
: ${JUMPBOX_SSH_KEY:?}

set +u
source deployments-src/ci/utils
source /etc/profile.d/chruby.sh
chruby $RUBY_VERSION

cp worker-state/*.json updated-worker-state/worker-state.json

ln -s $PWD/concourse-and-garden/concourse-*.tgz concourse-and-garden/concourse-release.tgz
ln -s $PWD/concourse-and-garden/garden-runc-*.tgz concourse-and-garden/garden-runc-release.tgz

# remove `natbox_` prefix from keys to conform to jumpbox-deployment templates
terraform_metadata="$( mktemp -d /tmp/metadata-XXXXXXXX)/metadata"
jq 'with_entries(.key |= sub("^worker_"; ""))' terraform/metadata > "${terraform_metadata}"

jumpbox_external_ip=$( jq -r -e .jumpbox_external_ip ${terraform_metadata} )
worker_internal_ip=$( jq -r -e .internal_ip ${terraform_metadata} )

ssh_tunnel \
   "${JUMPBOX_SSH_KEY}" \
   "${JUMPBOX_SSH_USER}@${jumpbox_external_ip}" \
   "${worker_internal_ip}"

pushd . > /dev/null
  echo "Updating WORKER..."
  bosh2 -n create-env \
    --state updated-worker-state/worker-state.json \
    -l "${terraform_metadata}" \
    -l <( echo "${WORKER_SECRETS}" ) \
    -l <( echo "${JUMPBOX_PUBLIC_KEY}") \
    -v "gcp_credentials_json='${GOOGLE_CREDENTIALS}'" \
    deployments-src/${ENVIRONMENT_NAME}/worker.yml
popd > /dev/null

echo "Successfully updated worker!"
